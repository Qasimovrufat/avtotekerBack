<script>
    
    var result;
    var m = $("#kUI_ModelName");
    var b = $("#kUI_BrandName");
    var GetModelUrl = "/tyre/GetModels";
    var GetBrandUrl = "/tyre/GetBrands";
    if (m.length) {
        BindDdl(GetBrandUrl, b, "Brand", "");
        BindDdl(GetModelUrl, m, "Model", "");

    }

    function BindDdl(dataLink, inputId, type, brandId) {
       
        $.ajax({
            url: dataLink+"/"+brandId,
            type: "get",
            dataType: "json",
            contentType: "application/json",
            success: function (data) {
                BindBrandDropDownList(data, inputId,type);
            },
            error: function () {
                alert("Oh noes");
            }
        });
    }

    function BindBrandDropDownList(data, id, type) {
        
        id.kendoDropDownList({
            optionLabel: "Select "+type+"...",
            dataTextField: "Name",
            dataValueField: "Id",
            index: 2,
            dataSource: data

        });

    }


    function showNotification(message, status, pos) {
        var thisNotify;
        if (thisNotify = UIkit.notify({
            message: message ? message : "",
            status: status ? status : "",
            timeout: 5e3,
            group: null,
            pos: pos ? pos: "top-center",
            onClose: function () {
                $body.find(".md-fab-wrapper").css("margin-bottom", ""), t.data("callback") && executeCallback(t.data("callback")), clearTimeout(thisNotify.timeout)
            }
        }), $window.width() < 768 && ("bottom-right" == thisNotify.options.pos || "bottom-left" == thisNotify.options.pos || "bottom-center" == thisNotify.options.pos) || "bottom-right" == thisNotify.options.pos) {
            var o = $(thisNotify.element).outerHeight(),
                i = $window.width() < 768 ? -6 : 8;
            $body.find(".md-fab-wrapper").css("margin-bottom", o + i);
        }
    }

    $("#kUI_BrandName").change(function () {
        var end = this.value;

        BindDdl(GetModelUrl, $("#kUI_ModelName"), "Model", end);
        
    });

    $("#kUI_ModelName").change(function () {
        var end = this.value;
        console.log(b);
        BindDdl(GetBrandUrl, $("#kUI_BrandName"), "Brand", end);
       
    });
</script>
  


